<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey"
    android:fitsSystemWindows="true"
    tools:context=".food_carts">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff345"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_chevron_left_black_24dp">

                </ImageView>

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_menu_black_24dp">

                </ImageView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="48dp"
                    android:fontFamily="@font/suez_one"
                    android:text="Your Food Cart"
                    android:textColor="#000000"
                    android:textSize="22dp">

                </com.google.android.material.textview.MaterialTextView>

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="95dp"
                    android:scaleX="-1"
                    android:src="@drawable/ic_shopping_cart_black_24dp">

                </ImageView>

            </LinearLayout>


            <view
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#ffa500">

            </view>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1e90ff"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableRight="@drawable/ic_location_on_black_24dp"
                    android:fontFamily="@font/suez_one"
                    android:text="Delivery At "
                    android:textSize="17dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Address selected"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/boogaloo"
                    android:text="Change"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:fillViewport="true"
                android:padding="5sp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                </androidx.recyclerview.widget.RecyclerView>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Item Total"
                    android:textSize="17dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Discount"
                    android:textSize="17dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Delivery Charge"
                    android:textSize="17dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Total Amount"
                    android:textSize="17dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColorHint="#006400"
                    app:boxBackgroundColor="@color/darkgrey"
                    app:hintTextColor="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Any Advice to Chef for your order" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#dcdcdc"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay using"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10sp"
                    android:drawableRight="@drawable/ic_arrow_drop_up_black_24dp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="35sp"
                        android:textSize="15sp"
                        android:layout_marginLeft="15sp"
                        android:drawableLeft="@drawable/paytm"/>

                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="280dp"
                    android:layout_height="70sp"
                    android:layout_margin="15sp"
                    app:cornerRadius="5dp"
                    android:backgroundTint="@color/yellow"
                    android:text="PLACE ORDER"
                    android:fontFamily="@font/suez_one"
                    android:textSize="18dp"
                    android:drawableLeft="@drawable/ic_restaurant_black_24dp"
                    android:drawableRight="@drawable/ic_tag_faces_black_24dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>