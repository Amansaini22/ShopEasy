<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey"
    android:fitsSystemWindows="true"
    tools:context=".account">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff345">

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatCheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/suez_one"
                    android:text="Name"
                    android:textSize="35dp">

                </androidx.appcompat.widget.AppCompatCheckedTextView>

                <androidx.appcompat.widget.AppCompatCheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="aman1234@gmail.com"
                    android:textSize="18dp">

                </androidx.appcompat.widget.AppCompatCheckedTextView>


            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="112dp"
                android:layout_height="120dp"
                android:src="@drawable/profile"
                android:layout_marginLeft="20dp">

            </de.hdodenhof.circleimageview.CircleImageView>

        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:backgroundTint="#dcdcdc"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="    Address"
                        android:textSize="24sp"
                        android:layout_margin="18dp"
                        android:drawableLeft="@drawable/ic_location_city_black_24dp"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp">

                    </com.google.android.material.textview.MaterialTextView>
                </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:backgroundTint="#dcdcdc"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Notifications"
                    android:textSize="24sp"
                    android:layout_margin="18dp"
                    android:drawableLeft="@drawable/ic_notifications_none_black_24dp"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp">

                </com.google.android.material.textview.MaterialTextView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:backgroundTint="#dcdcdc"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Payments"
                    android:textSize="24sp"
                    android:layout_margin="18dp"
                    android:drawableLeft="@drawable/ic_payment_black_24dp"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp">

                </com.google.android.material.textview.MaterialTextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:backgroundTint="#dcdcdc"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Settings"
                    android:textSize="24sp"
                    android:layout_margin="18dp"
                    android:drawableLeft="@drawable/ic_settings_black_24dp"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp">

                </com.google.android.material.textview.MaterialTextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:backgroundTint="#dcdcdc"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    About Us"
                    android:textSize="24sp"
                    android:layout_margin="18dp"
                    android:drawableLeft="@drawable/ic_info_black_24dp"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp">

                </com.google.android.material.textview.MaterialTextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:backgroundTint="#dcdcdc"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Send Feedback"
                    android:textSize="24sp"
                    android:layout_margin="18dp"
                    android:drawableLeft="@drawable/ic_feedback_black_24dp">

                </com.google.android.material.textview.MaterialTextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:backgroundTint="#dcdcdc"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Rate Us"
                    android:textSize="24sp"
                    android:layout_margin="18dp"
                    android:drawableLeft="@drawable/ic_star_half_black_24dp">

                </com.google.android.material.textview.MaterialTextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:backgroundTint="#dcdcdc"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Logout"
                    android:textSize="24sp"
                    android:layout_margin="18dp"
                    android:drawableLeft="@drawable/ic_assignment_return_black_24dp">

                </com.google.android.material.textview.MaterialTextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:backgroundTint="#dcdcdc"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="30sp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Sign up as Shopkeeper"
                    android:textSize="24sp"
                    android:layout_margin="18dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp">

                </com.google.android.material.textview.MaterialTextView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


