<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey"
    android:fitsSystemWindows="true"
    tools:context=".account">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatCheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/suez_one"
                    android:text="Name"
                    android:textSize="35dp">

                </androidx.appcompat.widget.AppCompatCheckedTextView>

                <androidx.appcompat.widget.AppCompatCheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="aman1234@gmail.com"
                    android:textSize="18dp">

                </androidx.appcompat.widget.AppCompatCheckedTextView>


            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="112dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_info_black_24dp"
                android:layout_marginLeft="20dp">

            </de.hdodenhof.circleimageview.CircleImageView>

        </LinearLayout>
        <view
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="15dp"
            android:background="#2D2D2D">

        </view>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="37dp"
                        android:src="@drawable/ic_location_city_black_24dp">

                    </ImageView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:text="Address"
                        android:textColor="#ffd7"
                        android:textSize="22dp">

                    </com.google.android.material.textview.MaterialTextView>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="22dp"
                        android:src="@drawable/ic_chevron_right_black_24dp">

                    </ImageView>
                </LinearLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp">

                </view>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="37dp"
                        android:src="@drawable/ic_notifications_none_black_24dp">

                    </ImageView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:text="Notifications"
                        android:textColor="#ffd7"
                        android:textSize="22dp">

                    </com.google.android.material.textview.MaterialTextView>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="22dp"
                        android:src="@drawable/ic_chevron_right_black_24dp">

                    </ImageView>
                </LinearLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp">

                </view>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="37dp"
                        android:src="@drawable/ic_payment_black_24dp">

                    </ImageView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:text="Payments"
                        android:textColor="#ffd7"
                        android:textSize="22dp">

                    </com.google.android.material.textview.MaterialTextView>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="22dp"
                        android:src="@drawable/ic_chevron_right_black_24dp">

                    </ImageView>
                </LinearLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp">

                </view>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="37dp"
                        android:src="@drawable/ic_settings_black_24dp">

                    </ImageView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:text="Settings"
                        android:textColor="#ffd7"
                        android:textSize="22dp">

                    </com.google.android.material.textview.MaterialTextView>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="22dp"
                        android:src="@drawable/ic_chevron_right_black_24dp">

                    </ImageView>
                </LinearLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp">

                </view>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="37dp"
                        android:src="@drawable/ic_info_black_24dp">

                    </ImageView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:text="About Us"
                        android:textColor="#ffd7"
                        android:textSize="22dp">

                    </com.google.android.material.textview.MaterialTextView>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="22dp"
                        android:src="@drawable/ic_chevron_right_black_24dp">

                    </ImageView>
                </LinearLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp">

                </view>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="37dp"
                        android:src="@drawable/ic_feedback_black_24dp">

                    </ImageView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:text="Send Feedback"
                        android:textColor="#ffd7"
                        android:textSize="22dp">

                    </com.google.android.material.textview.MaterialTextView>


                </LinearLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp">

                </view>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="37dp"
                        android:src="@drawable/ic_star_half_black_24dp">

                    </ImageView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:text="Rate Us"
                        android:textColor="#ffd7"
                        android:textSize="22dp">

                    </com.google.android.material.textview.MaterialTextView>


                </LinearLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp">

                </view>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="37dp"
                        android:src="@drawable/ic_assignment_return_black_24dp">

                    </ImageView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:text="Logout"
                        android:textColor="#ffd7"
                        android:textSize="22dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp">

                </view>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="37dp"
                        android:src="@drawable/ic_person_black_24dp">

                    </ImageView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:fontFamily="@font/suez_one"
                        android:text="SignUp as shopkeeper"
                        android:textColor="#000000"
                        android:textSize="22dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp">

                </view>
            </LinearLayout>





        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


