<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="420dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="70dp"
    android:layout_weight="6">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#fff345"
        android:layout_width="340dp"
        android:layout_height="400dp"
        app:cardCornerRadius="40dp"
        android:layout_marginLeft="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/suez_one"
                android:text="Delete Account"
                android:textColor="#000000"
                android:textSize="40dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="20dp"
                android:text="We're sorry to see you go."
                android:textColor="#000000"
                android:textSize="20dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="1dp"
                android:text="Deleting your account will remove all of your information from our database. This cannot be undone."
                android:textColor="#ff0000"
                android:textSize="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="15sp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#696969"
                    app:hintTextColor="@color/black"
                    app:boxBackgroundColor="@color/white"
                    android:layout_margin="5dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Any reason(optional)"/>
                </com.google.android.material.textfield.TextInputLayout>



            </androidx.cardview.widget.CardView>


            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="40sp"
                android:layout_gravity="center_horizontal"
                android:text="Delete"
                android:textSize="17dp"
                android:fontFamily="@font/suez_one"
                android:backgroundTint="@color/darkgrey">

            </br.com.simplepass.loadingbutton.customViews.CircularProgressButton>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

