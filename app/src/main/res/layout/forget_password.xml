<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="420dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="70dp"
    android:layout_weight="6">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#fff345"
        android:layout_width="340dp"
        android:layout_height="400dp"
        app:cardCornerRadius="40dp"
        android:layout_marginLeft="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/suez_one"
                android:text="Forgot Password"
                android:textColor="#000000"
                android:textSize="35dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:text="It's ok to forgot password !!!    Select which contact details we use to reset your password"
                android:textColor="#000000"
                android:textSize="17dp" />




            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="30sp"
                app:cardCornerRadius="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="70sp"
                        android:layout_marginLeft="7sp"
                        android:layout_marginTop="5sp"
                        android:src="@drawable/ic_phone_iphone_black_24dp">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatCheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15sp"
                            android:layout_marginLeft="20sp"
                            android:textSize="17sp"
                            android:fontFamily="@font/suez_one"
                            android:text="via SMS:">

                        </androidx.appcompat.widget.AppCompatCheckedTextView>

                        <androidx.appcompat.widget.AppCompatCheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginLeft="20sp"
                            android:text="********88"
                            android:textSize="17sp">

                        </androidx.appcompat.widget.AppCompatCheckedTextView>


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="30sp"
                app:cardCornerRadius="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="70sp"
                        android:layout_marginLeft="7sp"
                        android:layout_marginTop="5sp"
                        android:src="@drawable/ic_email_black_24dp">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatCheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15sp"
                            android:layout_marginLeft="20sp"
                            android:textSize="17sp"
                            android:fontFamily="@font/suez_one"
                            android:text="via email:">

                        </androidx.appcompat.widget.AppCompatCheckedTextView>

                        <androidx.appcompat.widget.AppCompatCheckedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginLeft="20sp"
                            android:text="*****@mail.com"
                            android:textSize="17sp">

                        </androidx.appcompat.widget.AppCompatCheckedTextView>


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

